<div class="card card-body p-4 bg-dark text-white">
  <h3 class="card-title">Add a task</h3>
  <form action="/task/add" method="POST">
    <div>
      <label for="title">Write the title:</label>
      <input
        type="text"
        name="title"
        placeholder="Title"
        id="title"
        class="form-control bg-dark text-white"
        required
      />
    </div>
    <div>
      <label for="description" class="mt-2">Write the description:</label>
      <textarea
        name="description"
        rows="5"
        cols="50"
        placeholder="Description"
        id="description"
        class="form-control bg-dark text-white"
        required
      ></textarea>
    </div>

    <input
      name="color"
      type="color"
      class="form-control form-control-color bg-dark mt-2"
      id="colorInput"
      value="#34ac4a"
      title="Choose your color"
    />

    <div>
      <button id="addTask" class="btn btn-primary mt-2">Add Task</button>
    </div>
  </form>
</div>