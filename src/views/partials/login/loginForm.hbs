<div class="card card-body p-4 bg-dark text-white text-center">
  <h2 class="card-title">Login</h2>
  <form action="/login" method="POST">
    <div>
      <input
        type="text"
        name="user"
        placeholder="User"
        id="user"
        class="form-control bg-dark text-white mt-2"
        required
      />
    </div>
    <div>
      <input
        type="password"
        name="password"
        placeholder="Password"
        id="password"
        class="form-control bg-dark text-white mt-2"
        required
      />
    </div>

    <div>
      <button id="loginUser" class="btn btn-secondary mt-2">Login</button>
    </div>
  </form>
</div>